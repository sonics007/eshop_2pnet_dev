# ============================================================================
# ESHOP - Production Environment Variables
# ============================================================================
# Skopírujte tento súbor do .env a upravte hodnoty

# Environment
NODE_ENV=production
PORT=3000

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL="file:./prisma/dev.db"

# ============================================================================
# AUTHENTICATION
# ============================================================================
# DÔLEŽITÉ: Zmeňte na náhodný bezpečný secret!
# Generovanie: openssl rand -base64 32
JWT_SECRET="CHANGE_THIS_TO_RANDOM_SECRET_32_CHARS_MIN"

# Session timeout (v minútach)
SESSION_TIMEOUT=30

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================
# SMTP nastavenia pre odosielanie emailov
EMAIL_HOST="smtp.example.com"
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER="eshop@example.com"
EMAIL_PASS="your-email-password"
EMAIL_FROM="ESHOP <eshop@example.com>"

# ============================================================================
# ABRA FLEXI API (voliteľné)
# ============================================================================
# Integrácia s účtovným systémom ABRA Flexi
FLEXIBEE_URL="https://your-flexibee-instance.com"
FLEXIBEE_COMPANY="your-company"
FLEXIBEE_AUTH_TOKEN="your-api-token"

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================
# Tawk.to widget ID (voliteľné)
NEXT_PUBLIC_TAWK_PROPERTY_ID=""
NEXT_PUBLIC_TAWK_WIDGET_ID=""

# Google Analytics (voliteľné)
NEXT_PUBLIC_GA_TRACKING_ID=""

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
# Base URL aplikácie (pre emaily, redirecty, atď.)
NEXT_PUBLIC_BASE_URL="https://your-domain.com"

# Admin 2FA
ADMIN_2FA_ENABLED=true

# ============================================================================
# SECURITY
# ============================================================================
# CORS origins (oddelené čiarkou)
ALLOWED_ORIGINS="https://your-domain.com,https://www.your-domain.com"

# Rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL="info"
LOG_FILE_PATH="./logs/app.log"

# ============================================================================
# BACKUP
# ============================================================================
BACKUP_DIR="/opt/eshop/backups"
BACKUP_RETENTION_DAYS=30

# ============================================================================
# NOTES
# ============================================================================
# - Nikdy necommitujte skutočné heslá do git!
# - Použite silné, náhodné JWT secret
# - V produkcii nastavte NODE_ENV=production
# - Pre SSL použite certbot: sudo certbot --nginx -d your-domain.com
